<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Code", :code %></th>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Show", :show %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% categories.each do |category| %>
		<tr>
			<td><%= casein_table_cell_link category.code, casein_category_path(category) %></td>
			<td><%= casein_table_cell_link category.name, casein_category_path(category) %></td>
			<td><%= casein_table_cell_link category.show, casein_category_path(category) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_category_path(category), :method => :delete, :data => { :confirm => "Are you sure you want to delete this category?" }) %>
			</td>
		</tr>
	<% end %>
</table>