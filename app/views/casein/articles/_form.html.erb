<!-- Scaffolding generated by Casein v5.1.1.3 -->


<div class="row">
    <div class="col-lg-12">
        <% if @article.image %>
        <img src="<%= @article.image.url(:landscape) %>">
        <% end %>
    </div>
    
	<div class="col-lg-12">
		<%= casein_text_field f, f.object, :title %>
	</div>
	
    <div class="col-lg-12">
		<%= casein_text_area f, f.object, :text %>
	</div>

	<div class="col-lg-12">
		<%= casein_file_field f, f.object, 'image_url', :image %>
	</div>
    
	<div class="col-lg-12">
		<%= casein_select f, f.object, :category_id, Category.all.map { |category| [category.name, category.id]} %>
	</div>
</div>
